<script>

var finddogBoardTotalList=null;

//메인페이지 load 시,
//carousel에 걸 링크 데이터 가져오기
// => MemberRestController -> getSession에서

//modal로 수정하기 

function getFinddogBoard(){
	
	var xmlhttp = new XMLHttpRequest();
	
	//서버에서 응답 후 처리 로직.
	xmlhttp.onreadystatechange = function(){
		if(xmlhttp.readyState==4 && xmlhttp.status==200){
			var data = JSON.parse(xmlhttp.responseText);
			
				
				finddogBoardTotalList = data.finddogBoardTotalList;
				
				var link_carousel_one = "../finddogboard/readHE_FinddogPage.do?finddogboard_no="+finddogBoardTotalList[0].finddogboard_no;
				var link_carousel_two = "../finddogboard/readHE_FinddogPage.do?finddogboard_no="+finddogBoardTotalList[1].finddogboard_no;
				var link_carousel_three = "../finddogboard/readHE_FinddogPage.do?finddogboard_no="+finddogBoardTotalList[2].finddogboard_no;
				
				document.getElementById("carousel_one").setAttribute("href", link_carousel_one);
				document.getElementById("carousel_two").setAttribute("href", link_carousel_two);
				document.getElementById("carousel_three").setAttribute("href", link_carousel_three);
				
	
			
		}
	};
	
	xmlhttp.open("get" , "../finddogboard/getFinddogBoard.do" , false);   //마지막 false는 동기식 호출
	xmlhttp.send();


}


</script>

